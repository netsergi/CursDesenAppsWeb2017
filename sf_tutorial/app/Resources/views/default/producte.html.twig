
{% extends 'base.html.twig' %}

{% block title %}{{resultat[0].NOM}}{% endblock %}

{% block body %}
  <div class="w3-content" style="max-width:700px">
     <h5 class="w3-center w3-padding-48"><span class="w3-tag w3-wide">THE MENU</span></h5>
    <br>
    <br>
    <div style="text-align: left;" class="w3-row w3-center w3-card-2 w3-padding">
       {% for opcio in resultat %}
          <h4><img class="icono" src="{{ asset('img/icono.jpeg') }}"><b>{{ opcio.NOM }}</b></h4>
          <p>{{opcio.DESCRIPCIO}}</p>
          <img class="w3-round w3-border w3-padding img_prod" src="{{ asset('img/'~opcio.foto) }}" />
       {% endfor %}
    </div>
    <img src="{{ asset('img/coffeehouse2.jpg') }}" style="width:100%;max-width:1000px;margin-top:32px;">
  </div>
  <br>
</div>  

{% endblock %}




